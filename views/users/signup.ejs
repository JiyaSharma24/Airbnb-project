<% layout("/layouts/boilerplate") %>
<h3 class ="text-center"> SignUp on Wanderlust</h3>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <form method="POST" action="/signup" class="needs-validated " novalidate >
      <div class="mb-3">
        <label for ="Username" class="form-label"><b>Username</b></label>
      <input
       name="username" 
     id="Username"
       type="text" 
       class="form-control"
       required
       />
    </div>
    <div class="mb-3">
        <label for ="Email" class="form-label"><b>Email</b></label>
      <input
       name="email" 
type="email" 
       class="form-control"
       required
       />
    </div>
     <div class="mb-3">
        <label for ="Password" class="form-label"><b>Password</b></label>
      <input
       name="password" 
type="password" 
       class="form-control"
       required
       />
    </div>
   <button> SignUp </button>
</form>
  </div>
    </div>