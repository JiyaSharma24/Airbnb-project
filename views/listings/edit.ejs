  <% layout("/layouts/boilerplate") %>
<div class="row" mt="3">
    <div class ="col-8 offset-2">
  
  <h3>Edit your Listings</h3>
 <form method="POST" action="/listings/<%=listing._id%>?_method=PUT"  novalidate class="need-validation" enctype="multipart/form-data">

  <div class="mb-3">
        <label for ="title" class="form-label"><b>  Title</b> </label>
   <input name="listing[title]" 
   value="<%= listing.title%>" 
   type="text" 
   class="form-control"
   required ;
   />
     <div class ="valid-feedback">Title is good</div>
 </div >
 <div class="mb-3">
  Original image<br>
<img src="<%= originalimage%>"/>
</div>
     <div class="mb-3" >
      <label for ="description" class="form-label"> <b>Description</b></label>
      <textarea name="listing[description]"class="form-control"  required ;><%= listing.description %> </textarea>
       <div class ="valid-feedback">Enter short description</div>
    
    </div>

      <div class ="mb-3">
<label for ="image" class="form-label" required ;> Upload New Image</label>

<input
        name="listing[image]"
      type="file"
        class="form-control"
      
      />
        <div class ="valid-feedback">Enter new image</div>
      </div>
      
<div class="row">
     <div class="mb-3 col-md-4">
      <label for ="price" class="form-label"><b> Price</b></label>
      <input name="listing[price]"  value="<%= listing.price%>" type="number" class="form-control" required ;/>
       <div class ="valid-feedback">Edit price</div>
    </div>
      <div class="mb-3 col-md-4">
        <label for ="country" class="form-label"><b>Country</b></label>
      <input name="listing[country]"  value="<%= listing.country%>" type="text" 
      class="form-control" required ;/>
        <div class ="valid-feedback">Enter country name </div>
      </div>
      </div>
     
      <br />
      <div class=" mb-3">
        <label for ="Location" class="form-label"><b>location </b></label>
      <input
        name="listing[location]"
         value="<%= listing.location%>"
        type="text"
        class="form-control"
        required  ;
      />
        <div class ="valid-feedback">Enter the new location</div>
      </div>
     
      <br>
      <button class="btn-btn-dark edit-btn mb=3"  >submit
      </button>
    </form>
</div>
      </div>